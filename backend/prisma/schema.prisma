generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String   @id @default(uuid())
  email       String   @unique
  password    String
  createdAt   DateTime @default(now())
  tickets     Ticket[]
}


model Organization {
  id          String        @id @default(uuid())
  name        String
  description String
  logoUrl     String
  address     String
  websiteUrl  String
  phone       String
  email       String        @unique
  password    String
  events      Event[]
  staff       StaffMember[]
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
}

enum EventCategory {
  CONFERENCE
  SEMINAR
  WORKSHOP
  MEETING
  COMPETITION
  FESTIVAL
  EXHIBITION
  REUNION
  OTHER
}

model Event {
  id             String        @id @default(uuid())
  title          String
  category       EventCategory
  description    String
  imageUrl       String
  location       String?
  ticketPrice    Float?
  startTime      DateTime
  endTime        DateTime
  maxTickets     Float
  isPublic       Boolean       @default(true) // Publicly visible or not
  organization   Organization  @relation(fields: [organizationId], references: [id])
  organizationId String
  tickets        Ticket[]
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
}

enum PaymentStatus {
  PENDING
  COMPLETED
  FAILED
}

model Ticket {
  id         String   @id @default(uuid())
  identifier String   @unique
  userId     String?  
  user       User?     @relation(fields: [userId], references: [id])
  buyerName  String
  buyerEmail String
  buyerPhone String
  isMale     Boolean
  isSustian  Boolean
  qrCode     String  @unique @default(uuid())
  paymentStatus PaymentStatus
  paymentMethod String
  paymentId String
  checkedIn  Boolean  @default(false)
  eventId    String
  event      Event    @relation(fields: [eventId], references: [id])
  createdAt  DateTime @default(now())
}

model StaffMember {
  id             String       @id @default(uuid())
  name           String
  email          String       @unique
  password       String
  organization   Organization @relation(fields: [organizationId], references: [id])
  organizationId String
  createdAt      DateTime     @default(now())
}
